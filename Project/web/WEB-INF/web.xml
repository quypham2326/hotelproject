<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>sample.servlet.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sample.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffSearchServlet</servlet-name>
        <servlet-class>sample.servlet.StaffSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerSearchServlet</servlet-name>
        <servlet-class>sample.servlet.ManagerSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MangerUpdateServlet</servlet-name>
        <servlet-class>sample.servlet.MangerUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerShowAllServlet</servlet-name>
        <servlet-class>sample.servlet.ManagerShowAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerReportServlet</servlet-name>
        <servlet-class>sample.servlet.ManagerReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>sample.servlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffSearchServlet</servlet-name>
        <url-pattern>/StaffSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerSearchServlet</servlet-name>
        <url-pattern>/ManagerSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MangerUpdateServlet</servlet-name>
        <url-pattern>/MangerUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerShowAllServlet</servlet-name>
        <url-pattern>/ManagerShowAllServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerReportServlet</servlet-name>
        <url-pattern>/ManagerReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file/>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>Project</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
